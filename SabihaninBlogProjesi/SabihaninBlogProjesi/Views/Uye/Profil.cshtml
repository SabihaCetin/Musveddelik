                            <a class="btn btn-primary btn-sm" rel="publisher"
                               target="_blank" href="@Model.Kullanici.Facebook">
                                <i class="fa fa-facebook"></i>
                            </a>
                           }
                           else
                           {
                            <a class="btn btn-primary btn-sm" rel="publisher"
                               target="_blank" href="#">
                                <i class="fa fa-facebook"></i>
                            </a>
                           }
                            @if (Model.Kullanici.Instagram != null)
                            {
                                /**/<a class="btn btn-danger btn-instagram" rel="publisher" href="@Model.Kullanici.Instagram"
                                       target="_blank">
                                    <i class="fa fa-instagram"></i>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-danger btn-instagram" rel="publisher" href="#"
                                   target="_blank">
                                    <i class="fa fa-instagram"></i>
                                </a>
                            }

                                
                               

                        </div>
                    </div>   
                }
                else*@
                
                    <div class="card hovercard" style="position: relative; margin:auto">
                        <div class="cardheader">
                        </div>
                        <div class="avatar">


                            <img alt="" src="~/Content/Upload/@Model.Kullanici.Resim">

                        </div>
                        <div class="info">
                            <div class="title">
                                <a target="_blank" href="#">@Model.Kullanici.AdSoyad</a>
                            </div>
                            <div class="desc">@Model.Kullanici.Meslek</div>
                            <div class="desc">@Model.Kullanici.Email</div>
                            <div class="desc">@Model.Kullanici.DogumTarihi</div>

                        </div>
                        <div class="bottom">
                            <a class="btn btn-primary btn-twitter btn-sm" target="_blank" href="@Model.Kullanici.Twitter">
                                <i class="fa fa-twitter"></i>
                            </a>
                            <a class="btn btn-danger btn-instagram" rel="publisher" href="@Model.Kullanici.Instagram"
                               target="_blank">
                                <i class="fa fa-instagram"></i>
                            </a>
                            <a class="btn btn-primary btn-sm" rel="publisher"
                               target="_blank" href="@Model.Kullanici.Facebook">
                                <i class="fa fa-facebook"></i>
                            </a>

                        </div>
                    </div>
                

            </div>
            <div>
    <h2><a href="/Makale/Create">Makale oluştur</a></h2>
</div>

