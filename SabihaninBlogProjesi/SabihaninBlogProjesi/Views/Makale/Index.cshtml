@model IEnumerable<DomainEntity.Models.Makale>

<p>
    @Html.ActionLink("Create New", "MakaleEkle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tanım)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icerik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MakaleResim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MakaleVideo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MakaleMuzik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EklemeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YazarEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tanım)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icerik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakaleResim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakaleVideo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakaleMuzik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EklemeTarihi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YazarEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MakaleID }) |
            @Html.ActionLink("Details", "Details", new { id=item.MakaleID }) |
            <a onclick="sil(this)" data-id="@item.MakaleID">Sil</a>
        </td>
    </tr>

}

</table>
<script>
    function sil(hangibuton) {
        var id = $(hangibuton).attr("data-id");
            $.ajax({
                url: "/Makale/MakaleSil",
                method: "POST",
                data: { "id": id },
                success: function () {
                    $(hangibuton).parent().parent().slideUp();
                }
            })
    }
</script>