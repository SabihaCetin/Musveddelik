@model IEnumerable<DomainEntity.Models.Makale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@helper IcerikKisalt(string metin)
{
if (metin.Length > 500)
{
        @metin.Substring(0, 500)
}
else
{
        @metin
}
}




<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tüm Makaleler</h1>
        <p>
            @Html.ActionLink("Yeni Makale Ekle", "Create")
        </p>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    
    @{ int i = 0; }
    @foreach (var item in Model)
    {
        i++;
        var classAdi = "";
        switch (i)
        {
            case 1:
                classAdi = "panel panel-red";
                break;
            case 2:
                classAdi = "panel panel-primary";
                break;
            case 3:
                classAdi = "panel panel-success";
                break;
            case 4:
                classAdi = "panel panel-info";
                break;
            case 5:
                classAdi = "panel panel-warning";
                break;
            case 6:
                classAdi = "panel panel-green";
                break;
            case 7:
                classAdi = "panel panel-yellow";
                break;
            case 8:
                classAdi = "panel panel-red";
                break;
            case 9:
                classAdi = "panel panel-default";
                break;


        }

        <div class="col-lg-4">

            <div class="@classAdi">
                <div class="panel-heading">
                    Kategori: @item.Kategori.Adi
                </div>

                @*@foreach (var item1 in Model)
                {
                    if (@item1.Etiketler.Where(x => x.EtiketID == item.MakaleID).Count() != 0)
                    {
                        <div class="panel-heading">
                            Ekleyen: @item1.Etiketler.Where(x => x.EtiketID == item.MakaleID).Select(x => x.Adi).FirstOrDefault()
                      </div>

                    }
                }*@

                <div class="panel-body">
                    <h4>@item.Baslik</h4>
                    <p>@IcerikKisalt(@item.Icerik)  </p><a href="/AdminMakale/Details?id=@item.MakaleID" style="display:inline">devamı...</a>  
                </div>
                <div class="panel-footer">
                    <p style="display:inline-block">
                        @item.EklenmeTarihi
                </p>
                <p style="display:inline-block">
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.MakaleID }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.MakaleID }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.MakaleID })
                </p>
            </div>
        </div>
    </div>

    }
</div>

